<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/main_color"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/gest_age_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/gest_age"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/gest_age_text"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_pregnant_woman_black_24dp" />

    <EditText
        android:id="@+id/gest_age_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/gest_age_text"
        android:padding="12dp"
        android:background="@drawable/edit_bg"
        android:hint="@string/gest_age_hint"
        android:inputType="number"/>

    <TextView
        android:id="@+id/date_of_birth_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gest_age_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/date_of_birth"
        android:textColor="@color/white" />


    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/date_of_birth_text"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_date" />

    <EditText
        android:id="@+id/date_of_birth_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_of_birth_text"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="12dp"
        android:background="@drawable/edit_bg"
        android:hint="@string/date_of_birth_hint"/>

    <Button
        android:id="@+id/btn_caclulate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_of_birth_input"
        android:text="@string/calculate"
        android:textColor="@color/white"
        android:background="@drawable/btn_calculate"
        android:fontFamily="@font/montserrat"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>


